<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NetflixMoviesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">#19191b</item>
    </style>
    <style name="Theme.NetflixMoviesApp" parent="Base.Theme.NetflixMoviesApp" />
    <style name="roundedImageRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">52%</item>
    </style>
    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Add attributes here -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="Floating" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/floating_background</item>
    </style>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10sp</item>
    </style>
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">
            @color/black
        </item>
        <item name="windowSplashScreenAnimatedIcon">
            @drawable/logo
        </item>
        <item name="postSplashScreenTheme">
            @style/Base.Theme.NetflixMoviesApp
        </item>

    </style>
</resources>